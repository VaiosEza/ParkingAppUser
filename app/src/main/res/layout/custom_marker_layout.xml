<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp"> <!-- Προαιρετικά: Μικρό κενό στο κάτω μέρος -->

    <!-- Το όνομα της τοποθεσίας -->
    <TextView
        android:id="@+id/marker_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Τοποθεσία"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:background="@drawable/rounded_white_background"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Το κόκκινο εικονίδιο του marker -->
    <ImageView
        android:id="@+id/marker_pin"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/red_location_24px"
        android:contentDescription="Marker Pin"
        app:layout_constraintTop_toBottomOf="@id/marker_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>