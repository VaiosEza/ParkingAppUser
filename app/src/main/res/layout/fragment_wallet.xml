<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/planet2_new"
    android:clickable="true"
    tools:context=".WalletFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/payment_methods"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/ten_euro"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/radio_group_selector"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:padding="18dp"
                android:text="10€"
                android:textColor="@drawable/radio_buttons_text_color_selector"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/twenty_euro"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:background="@drawable/radio_group_selector"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:padding="18dp"
                android:text="20€"
                android:textColor="@drawable/radio_buttons_text_color_selector"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/fifty_euro"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:background="@drawable/radio_group_selector"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:padding="18dp"
                android:text="50€"
                android:textColor="@drawable/radio_buttons_text_color_selector"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RadioGroup>

        <LinearLayout
            android:id="@+id/payment_methods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radio_group">

            <Button
                android:id="@+id/buttonDebidCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/payment_method_btn_selector"
                android:padding="16dp"
                android:text="Debid Card"
                android:textColor="@drawable/payment_btn_text_color_selector"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="24dp"></Space>

            <Button
                android:id="@+id/buttonPaySafe_PayPal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/payment_method_btn_selector"
                android:padding="16dp"
                android:text="PaySafe / Paypal"
                android:textColor="@drawable/payment_btn_text_color_selector"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>